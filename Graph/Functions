function addtwonumbersfunction{
    param (
        $noofmonths,
        $noofyears
    )

    return $noofmonths + $noofyears
    
}

Write-Output "Days of our lives"

$noofmonths = 12
$noofyears = 40

$addednumbers = addtwonumbersfunction -noofmonths 12 -noofyears 40

Write-Output "The total days of your live are $addednumbers"