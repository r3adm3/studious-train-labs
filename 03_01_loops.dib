#!markdown

1. loop through the array and print each item
2. print the second item directly
3. loop through the array backwards and print each item
4. loop through the array and print only the item with no upper-case letter

#!pwsh

$fruit = @('Apples','Oranges','Bananas', 'Mango', 'pineapple', 'Lemon')
for($i=0; $i -lt 6; $i++) {
    $fruit[$i]
}

#!pwsh

$fruit = @('Apples','Oranges','Bananas', 'Mango', 'pineapple', 'Lemon')
$fruit[1]

#!pwsh

$fruit = @('Apples','Oranges','Bananas', 'Mango', 'pineapple', 'Lemon')
for($i=5; $i -ge 0; $i--) {
    $fruit[$i]
}

#!pwsh

$fruit = @('Apples','Oranges','Bananas', 'Mango', 'pineapple', 'Lemon')
for($i=0; $i -lt 6; $i++) {
    $fruit[$i].ToLower()
}
